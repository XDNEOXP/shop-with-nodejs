<!doctype html>
<html lang="en">
    <head>
        <%- include('./layout/head') %>
    </head>
    <body>
        <%- include('./layout/header') %>
        <!-- ================ start banner area ================= -->
        <section class="blog-banner-area" id="blog">
            <div class="container h-100">
                <div class="blog-banner">
                    <div class="text-center">
                        <h1>Shop Single</h1>
                        <nav aria-label="breadcrumb" class="banner-breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Home</a>
                                </li>
                                <li
                                    class="breadcrumb-item active"
                                    aria-current="page"
                                >
                                    Shop Single
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <!-- ================ end banner area ================= -->

        <!--================Single Product Area =================-->
        <div class="product_image_area mb-5">
            <div class="container">
                <div class="row s_product_inner">
                    <div class="col-lg-6">
                        <div class="owl-carousel owl-theme s_Product_carousel">
                            <% images.forEach((image) =>{ %>
                                <div class="single-prd-item">
                                    <img
                                        class="img-fluid"
                                        src="<%= image %>"
                                        alt=""
                                    />
                                </div>
                            <% }) %>
                        </div>
                    </div>
                    <div class="col-lg-5 offset-lg-1">
                        <div class="s_product_text">
                            <% for(key in flash){ %>
                                <div class="col-md-12 form-group">
                                    <div
                                        class="alert alert-danger text-center"
                                        role="alert"
                                    >
                                    <%= flash[key] %>
                                    </div>
                                </div>
                            <% } %>
                            <h3><%= product.name %></h3>
                            <h2>$<%= product.price %></h2>
                            <ul class="list">
                                <li>
                                    <a class="active" href="category?id=<%= product.category_id %>"
                                        ><span>Category :</span>  <%= product.category.name %></a
                                    >
                                </li>
                                <li>
                                    <span>Availibility</span> : <span class="ml-3 text-success">Available</span>
                                </li>
                            </ul>
                            <p><%= product.description %></p>
                            <div class="d-flex flex-column">
                                <form action="/cart?id=<%= product.id %>" onkeydown="return event.key != 'Enter';" method="post">
                                    <div class="d-flex w-50 align-items-center">
                                        <label for="qty">Quantity:</label>
                                        <button
                                            onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) , sst > 1 ) result.value--;return false;"
                                            class="btn btn-outline-secondary btn-sm ml-2"
                                            type="button"
                                        >
                                            <i class="ti-angle-left"></i>
                                        </button>
                                        <input
                                            type="text"
                                            name="qty"
                                            id="sst"
                                            size="2"
                                            maxlength="12"
                                            value="1"
                                            title="Quantity:"
                                            class="input-text qty w-50 text-center ml-2 mr-2"
                                        />
                                        <button
                                            onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                                            class="btn btn-outline-secondary btn-sm"
                                            type="button"
                                        >
                                            <i class="ti-angle-right"></i>
                                        </button>
                                    </div>
                                    <% if(added){ %>
                                        <button
                                            type="button"
                                            class="btn btn-primary disabled w-100 text-center mt-4"
                                            href="#"
                                        >
                                            Added to Cart
                                        </button>
                                    <% } else{ %>
                                        <button
                                            type="submit"
                                            class="button primary-btn w-100 text-center mt-4"
                                            href="#"
                                        >
                                            Add to Cart
                                        </button>
                                    <% } %>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--================End Single Product Area =================-->

        <%- include('./layout/footer') %>
    </body>
</html>
