<button data-toggle="modal" data-target="#exampleModal">
    <i class="ti-search"></i>
</button>
<div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Seach Products
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/search" method="get">
                    <div class="input-group mb-3">
                        <input
                            type="text"
                            class="form-control p-4"
                            name="search"
                            id=""
                            required
                        />
                        <button class="btn bg-success text-light p-2">
                            Search
                        </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn bg-secondary text-light p-2"
                    data-dismiss="modal"
                >
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
